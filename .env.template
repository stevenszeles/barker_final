# ===========================================
# PRODUCTION CONFIGURATION TEMPLATE
# ===========================================
# Copy this file to .env and fill in your values
# NEVER commit .env file to git!

# ----- DATABASE CONFIGURATION -----
# For production, use PostgreSQL (provided by your hosting platform)
# Example: postgresql://user:password@host:5432/dbname
DATABASE_URL=postgresql://your_db_user:your_db_password@your_db_host:5432/your_db_name

# ----- REDIS CACHE (Optional but recommended) -----
# Example: redis://default:password@host:6379
REDIS_URL=redis://default:your_redis_password@your_redis_host:6379

# ----- APPLICATION SETTINGS -----
# API endpoint prefix (keep as /api)
WS_API_PREFIX=/api

# Logging level (INFO for production, DEBUG for troubleshooting)
LOG_LEVEL=INFO

# Method version tag (for tracking)
WS_METHOD_VERSION=v1.0.0

# ----- CORS SETTINGS -----
# Add your production domain here
# Example: https://yourdomain.com,https://www.yourdomain.com
ALLOWED_ORIGINS=https://yourdomain.com

# ----- MARKET DATA CONFIGURATION -----
# Set to 1 to enable live market data, 0 for static demo data
WS_LIVE_QUOTES=1

# Market data mode (0 = full trading, 1 = market data only)
WS_MARKETDATA_ONLY=0

# ----- SCHWAB API CREDENTIALS (Optional) -----
# Get these from Schwab Developer Portal
SCHWAB_CLIENT_ID=your_client_id_here
SCHWAB_CLIENT_SECRET=your_client_secret_here
SCHWAB_REDIRECT_URI=https://yourdomain.com/api/auth/schwab/callback

# ----- POLYGON.IO API (Optional) -----
# Get free or paid key from polygon.io
POLYGON_API_KEY=your_polygon_api_key_here

# ----- PERFORMANCE TUNING -----
# Quote fetch timeout in seconds
WS_QUOTE_TIMEOUT=4

# Maximum symbols to fetch at once
WS_QUOTE_MAX_SYMBOLS=80

# Batch size for quote fetching
WS_QUOTE_BATCH=50

# Schwab token refresh cooldown (seconds)
WS_SCHWAB_REFRESH_COOLDOWN=60

# Schwab API timeout (seconds)
WS_SCHWAB_TIMEOUT=6

# ----- WORKER SETTINGS -----
# How often to update prices (seconds)
PRICE_UPDATE_INTERVAL=60

# How often to calculate portfolio metrics (seconds)
PORTFOLIO_CALC_INTERVAL=120

# Cache TTL for computed metrics (seconds)
CACHE_TTL=300
